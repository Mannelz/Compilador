/* Exemplo de Programa na linguagem LC */
int n;
string nome;
boolean naoTerminou;
final MAXITER=10;
{ Bloco Principal }
if n < 10 begin
  n = 10;
end
begin
  write,"Digite seu nome: ";
  readln,nome;
  naoTerminou=true;
  n=0;
  if n < 10 begin
    write,"N é menor que 10";
  end
  else if n > 10 begin
    write,"N é maior que 10";
  end
  else begin
    write,"N é igual a 10";
  end
  while naoTerminou begin
    writeln,"Olá ",nome;
    n=n+1;
    naoTerminou=n<MAXITER;
  end
end